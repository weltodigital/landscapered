generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String         @unique
  hashedPassword String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  organisations  Organisation[]

  @@map("users")
}

model Organisation {
  id        String     @id @default(cuid())
  name      String
  logoUrl   String?
  ownerId   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  owner     User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  products  Product[]
  projects  Project[]
  rateCards RateCard[]

  @@map("organisations")
}

model RateCard {
  id                         String       @id @default(cuid())
  organisationId             String
  labourRatePerHour          Float
  defaultProfitMarginPercent Float
  wasteDisposalRate          Float
  travelCostPerMile          Float
  createdAt                  DateTime     @default(now())
  updatedAt                  DateTime     @updatedAt
  organisation               Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  rateItems                  RateItem[]

  @@map("rate_cards")
}

model RateItem {
  id                     String   @id @default(cuid())
  rateCardId             String
  elementType            String
  unit                   String
  baseMaterialCost       Float
  baseLabourHoursPerUnit Float
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  rateCard               RateCard @relation(fields: [rateCardId], references: [id], onDelete: Cascade)

  @@unique([rateCardId, elementType, unit])
  @@map("rate_items")
}

model Project {
  id             String          @id @default(cuid())
  organisationId String
  title          String
  clientName     String
  clientEmail    String
  description    String?
  preferredStyle String?
  gardenLength   Float?
  gardenWidth    Float?
  dimensionUnit  String?         @default("metres")
  status         String          @default("DRAFT")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  designConcepts DesignConcept[]
  gardenPhotos   GardenPhoto[]
  organisation   Organisation    @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  quotes         Quote[]

  @@map("projects")
}

model GardenPhoto {
  id        String   @id @default(cuid())
  projectId String
  url       String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("garden_photos")
}

model DesignConcept {
  id             String          @id @default(cuid())
  projectId      String
  style          String
  imageUrl       String
  metadata       String?
  createdAt      DateTime        @default(now())
  project        Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  designElements DesignElement[]
  quotes         Quote[]

  @@map("design_concepts")
}

model DesignElement {
  id              String        @id @default(cuid())
  designConceptId String
  elementType     String
  quantityNumeric Float
  unit            String
  notes           String?
  createdAt       DateTime      @default(now())
  designConcept   DesignConcept @relation(fields: [designConceptId], references: [id], onDelete: Cascade)

  @@map("design_elements")
}

model Quote {
  id              String          @id @default(cuid())
  projectId       String
  designConceptId String
  subtotal        Float
  profit          Float
  total           Float
  lowEstimate     Float
  highEstimate    Float
  currency        String          @default("GBP")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  lineItems       QuoteLineItem[]
  designConcept   DesignConcept   @relation(fields: [designConceptId], references: [id], onDelete: Cascade)
  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, designConceptId])
  @@map("quotes")
}

model QuoteLineItem {
  id              String   @id @default(cuid())
  quoteId         String
  elementType     String
  description     String
  quantityNumeric Float
  unit            String
  unitPrice       Float
  lineTotal       Float
  productId       String?
  createdAt       DateTime @default(now())
  product         Product? @relation(fields: [productId], references: [id])
  quote           Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@map("quote_line_items")
}

model Product {
  id             String          @id @default(cuid())
  organisationId String
  name           String
  description    String?
  price          Float
  unit           String          @default("UNIT")
  category       String?
  sku            String?
  supplierName   String?
  supplierUrl    String?
  imageUrl       String?
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  organisation   Organisation    @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  quoteLineItems QuoteLineItem[]

  @@map("products")
}
